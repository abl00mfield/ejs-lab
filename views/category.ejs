<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <% const category = menuItems[0].category.charAt(0).toUpperCase() + menuItems[0].category.slice(1); %>
    <title><%= category %></title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <h1><%= category %></h1>
    <ul>
      <% menuItems.forEach(item => { %>
        <li>
            <%= item.name %> - $<%= item.price %> (Rating: <%= item.rating %>/5)
            <p><%= item.details %></p>
        </li>
        <% }); %> 
    </ul>
  </body>
  </html>